@model QnA.ViewModels.UserViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>User</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 form-group pull-right top_search">
            <a href="@Url.Action("Add","User")" class="btn btn-primary" style="float:right">
                + Add
            </a>
        </div>
    </div>
</div>
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Manage Users </h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">

                        <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                    <th>View</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var data in Model.userList)
                                {
                                    <tr>
                                        <td>@data.Image</td>
                                        <td>@data.Name</td>
                                        <td>@data.Email</td>
                                        <td>@Html.ActionLink("Edit", "Edit", "User", new { id = data.Id }, null)</td>
                                        <td>@Html.ActionLink("Delete", "Delete", "User", new { id = data.Id }, null)</td>
                                        <td>@Html.ActionLink("View", "Detail", "User", new { id = data.Id }, null)</td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
