@model QnA.ViewModels.TagViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
<style>
    textarea {
        width: 100%;
        height: 200px;
    }
</style>
<div class="page-title">
    <div class="title_left">
        <h3>Tags</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_content">
                @using (Html.BeginForm("Save", "Tags"))
                {

                    <span class="section">@Model.type Tags</span>
                    <div class="field item form-group">
                        <label class="col-form-label col-md-3 col-sm-3  label-align">Name<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6">
                            <h3>
                                <b>
                                    @Html.TextBoxFor(m => m.tag.Name, new { @class = "form-control" })
                                </b>
                            </h3>
                        </div>
                    </div>



                    <div class="field item form-group">
                        <label class="col-form-label col-md-3 col-sm-3  label-align">Description<span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6">
                            <h6>
                                <i>
                                    @Html.TextAreaFor(m => m.tag.Description)
                                </i>
                            </h6>

                        </div>
                    </div>
                    @Html.HiddenFor(m => m.tag.Id)
                    <div class="ln_solid">
                        <div class="form-group">
                            <div class="col-md-6 offset-md-3">
                                <button type='submit' class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

