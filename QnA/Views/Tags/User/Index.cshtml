@model QnA.ViewModels.TagViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/ClientMaster.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3>Tags</h3>
    </div>
</div>
<div class="clearfix"></div>

@foreach (var data in Model.taglist)
{
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
        <div class="card text-dark bg-light mb-3">
            <a href="/Question/Tag?tagId=@data.Id">
                <div class="card-header">
                    <h3>
                        <b>@data.Name</b>
                    </h3>
                </div>
            </a>
            <div class="card-body">
                <h6><i><p class="card-text">@data.Description</p></i></h6>
            </div>
            <div class="card-footer">
                <p>@data.CountQuestion Questions</p>
            </div>
        </div>
    </div>
}


